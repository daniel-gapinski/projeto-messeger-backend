generator client {
  provider = "prisma-client-js"
  //output   = "../src/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  password  String
  email     String   @unique
  username  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  // relacionamentos de amizade
  sentRequests     Friend[] @relation("Requesters")
  receivedRequests Friend[] @relation("Addressees")

  // mensagens
  sentMessages     DirectMessage[] @relation("SentDMs")
  receivedMessages DirectMessage[] @relation("ReceivedDMs")

  @@map("users")
}

model Friend {
  id          String       @id @default(uuid())
  requesterId String
  addresseeId String
  status      FriendStatus @default(PENDING)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now())

  requester User @relation("Requesters", fields: [requesterId], references: [id])
  addressee User @relation("Addressees", fields: [addresseeId], references: [id])

  // mensagens da amizade
  messages DirectMessage[]

  @@unique([requesterId, addresseeId])
  @@map("friends")
}

model DirectMessage {
  id         String   @id @default(uuid())
  content    String
  senderId   String
  receiverId String
  friendId   String
  createdAt  DateTime @default(now())
  read       Boolean  @default(false)

  sender   User   @relation("SentDMs", fields: [senderId], references: [id])
  receiver User   @relation("ReceivedDMs", fields: [receiverId], references: [id])
  friend   Friend @relation(fields: [friendId], references: [id])

  @@map("directMessages")
}

enum FriendStatus {
  PENDING
  ACCEPTED
  REJECTED
  BLOCKED
}
